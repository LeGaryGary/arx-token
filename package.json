{
  "name": "war",
  "version": "1.0.1",
  "description": "WAR Smart Contracts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "solium -d contracts",
    "prettier": "prettier --write **/*.sol",
    "redeploy": "./scripts/redeploy.sh",
    "lintfix": "npm run lint -- --fix",
    "cover": "solidity-coverage",
    "test": "truffle test --network local",
    "migrate": "truffle migrate",
    "coverage": "./node_modules/.bin/solidity-coverage",
    "ganache": "./scripts/ganache.sh",
    "remix": "remixd -s contracts --remix-ide https://remix.ethereum.org",
    "verify": "truffle run verify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndreiD/war-token"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "dotenv": "8.2.0",
    "bignumber.js": "9.0.0",
    "ganache-cli": "^6.8.2",
    "openzeppelin-eth": "2.2.0",
    "openzeppelin-solidity": "2.4.0",
    "truffle": "5.1.10",
    "truffle-hdwallet-provider": "1.0.17",
    "web3": "1.2.4",
    "zos": "2.4.2",
    "q": "^1.5.1",
    "truffle-assertions": "^0.9.2",
    "zos-lib": "2.4.2"
  },
  "devDependencies": {
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.22",
    "remixd": "0.1.8",
    "truffle-security": "1.6.2"
  },
  "keywords": [
    "Arweave",
    "Wrapperd Token",
    "Contract",
    "dApp",
    "Blockchain",
    "Web3"
  ],
